

<p id="notice"><%= notice %></p>

<h1>Listing Activities</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.code %></td>
        <td><%= activity.description %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activity', new_activity_path %>

<div id="activities"></div>

<script type="text/javascript">
  $(function() {
  // Blog is the app name
  window.router = new Blog.Routers.ActivitiesRouter({activities: <%= @activities.to_json.html_safe -%>});
  console.log('XXXXXXXXXXXXXXXXXXXXXXXXXXXXX');
  Backbone.history.start();
  });
</script>